<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_background"
    android:fitsSystemWindows="true"
    android:padding="16dp"
    tools:context="at.shockbytes.coins.ui.activity.LoginActivity">

    <TextView
        android:id="@+id/activity_login_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <ImageView
        android:id="@+id/activity_login_img_btc"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/activity_login_img_fingerprint"
        android:layout_toStartOf="@+id/activity_login_img_fingerprint"
        app:srcCompat="@drawable/ic_crypto_currency_btc" />

    <ImageView
        android:id="@+id/activity_login_img_eth"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignBottom="@+id/activity_login_img_btc"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        app:srcCompat="@drawable/ic_crypto_currency_eth" />

    <ImageView
        android:id="@+id/activity_login_img_ltc"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignTop="@+id/activity_login_img_btc"
        android:layout_toEndOf="@+id/activity_login_img_fingerprint"
        android:layout_toRightOf="@+id/activity_login_img_fingerprint"
        app:srcCompat="@drawable/ic_crypto_currency_ltc" />

    <TextView
        android:id="@+id/activity_login_txt_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_login_img_fingerprint"
        android:layout_below="@+id/activity_login_img_btc"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="@string/login_summary"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <com.mattprecious.swirl.SwirlView
        android:id="@+id/activity_login_img_fingerprint"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/activity_login_fingerprint_error"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        app:swirl_state="off" />

    <TextView
        android:id="@+id/activity_login_fingerprint_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/percentage_loose"
        android:fontFamily="sans-serif-light"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
