<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="General">

        <ListPreference
            android:defaultValue="@string/local_currency_default_value"
            android:entries="@array/currency_entries"
            android:entryValues="@array/currency_entry_values"
            android:key="@string/prefs_key_local_currency"
            android:title="Local currency" />

        <SwitchPreference
            android:defaultValue="true"
            android:key="@string/prefs_key_auto_update"
            android:summary="Values updates in fixed interval"
            android:title="Auto update values" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/prefs_key_fingerprint_as_auth"
            android:title="Secure app with Fingerprint" />

    </PreferenceCategory>

    <PreferenceCategory android:title="About">

        <Preference
            android:summary="Developer"
            android:title="Shockbytes Studio (c) 2017" />

        <Preference
            android:summary="@string/app_version"
            android:title="App Version" />

    </PreferenceCategory>

</PreferenceScreen>